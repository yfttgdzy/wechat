/* plugin/components/calendar/calendar.wxss */
.calendar-box{
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background-color: rgba(0,0,0,.2);
  box-sizing: border-box;
}
.calendar-view{
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
}
.calendar-view .calendar-item{
  flex: 1;
  background-color: #000;
  border:1px solid #fff;
  text-align: center;
  
  height: 100px;
  line-height: 100px;
  font-size: 20px;
  color: #fff;
  overflow-y: hidden;
}
.year-list,
.month-list,
.day-list,
.hour-list,
.minite-list,
.second-list{
  transition: transform 1s linear;
}
.calendar-opeBtn{
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  position: absolute;
  left: 0;
  bottom: 100px;
  width: 100%;
}
.calendar-opeBtn button{
  flex-grow: 1;
  display: inline-block;
  height: 34px;
  line-height: 34px;
}
.btn-blue{
  background-color: #0ff;
}
.btn-white{
  background-color: #fff;
}